{
  "swagger": "2.0",
  "info": {
    "description": "API documentation for the final project",
    "version": "Seasony v1.0",
    "title": "Final project",
    "contact": {}
  },
  "host": "",
  "basePath": "/api",
  "paths": {
    "/users/role": {
      "get": {
        "tags": ["user role"],
        "summary": "Get a role for specific user by uid",
        "description": "",
        "operationId": "getRole",
        "produces": [
          {
            "application/json": {
              "name": "admin"
            }
          }
        ],
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Firebase token",
            "required": true,
            "type": "string",
            "default": "Bearer ENTER_FIREBASE_TOKEN"
          }
        ],
        "responses": {
          "200": {
            "description": "Role returned."
          },
          "401": {
            "description": "You are not authorized to view this content."
          },
          "404": {
            "description": "A user with the specified uid was not found."
          },
          "default": {
            "description": "Unexpected error."
          }
        },
        "security": [
          {
            "fireabse_auth": ["read"]
          }
        ]
      }
    },
    "/users/name": {
      "get": {
        "tags": ["user name"],
        "summary": "Get a name for specific user by uid",
        "description": "",
        "operationId": "getName",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "uid",
            "in": "body",
            "description": "uid from Firebase token",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Name returned."
          },
          "404": {
            "description": "Name not found"
          },
          "default": {
            "description": "Unexpected error."
          }
        },
        "security": [
          {
            "fireabse_auth": ["read"]
          }
        ]
      }
    },
    "/crop-stage-parameter-values/{cropId}": {
      "get": {
        "tags": ["crop-default-values"],
        "parameters": [
          {
            "name": "cropId",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "summary": "Get default parameter values for a specific crop",
        "description": "Get default parameter values for a specific crop by cropId",
        "operationId": "getCropStageDefaultValuesByCropId",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Successful GET request"
          },
          "401": {
            "description": "Unauthorized request"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Server error"
          }
        },
        "security": {
          "fireabse_auth": ["read"]
        }
      }
    }
  },
  "securityDefinitions": {
    "firebase_auth": {
      "type": "oauth2",
      "authorizationUrl": "seasony-login.firebaseapp.com",
      "flow": "accessCode",
      "scopes": {
        "read": "read data based on user uid"
      }
    }
  }
}
